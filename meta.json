{
  "prompts": {
    "name": {
      "type": "input",
      "label": "项目名称："
    },
    "description": {
      "type": "input",
      "label": "项目描述：",
      "default": "A Vue.js project"
    },
    "author": {
      "type": "input",
      "label": "作者："
    },
    "platform": {
      "type": "list",
      "label": "平台：",
      "choices": ["weixin", "alipay", "none"]
    },
    "easymock": {
      "type": "confirm",
      "label": "是否启动easymock",
      "default": "y",
      "children": {
        "id": {
          "type": "input",
          "label": "Id:",
          "default": ""
        },
        "name": {
          "type": "input",
          "label": "该项目下的API生成之后会被放至到api目录位置：",
          "default": ""
        }
      }
    }
  },
  "completeMessage": "{{#inPlace}}To get started:\n\n  yarn install\n  yarn run dev{{else}}To get started:\n\n  cd {{destDirName}}\n  yarn install\n  yarn run dev{{/inPlace}}"
}
